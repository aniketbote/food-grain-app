<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:orientation="vertical"
    tools:context=".Activities.IndexActivity"
    >
    <include
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        layout="@layout/activity_toolbar"/>


    <ScrollView
        android:layout_marginTop="55sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="2sp"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:id="@+id/card_index"
            android:layout_width="350sp"
            android:layout_height="220dp"
            android:layout_marginLeft="29sp"
            android:layout_marginTop="30sp"
            app:cardCornerRadius="15sp">
            >

            <com.synnapps.carouselview.CarouselView
                android:id="@+id/carousel_index"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:fillColor="#FFFF"
                app:indicatorGravity="center_horizontal"
                app:pageColor="@android:color/darker_gray"
                app:radius="3sp"
                app:slideInterval="3000"
                app:strokeColor="@android:color/secondary_text_dark"
                app:strokeWidth="1sp"></com.synnapps.carouselview.CarouselView>

        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15sp"
            android:layout_marginTop="275sp"
            android:textSize="22sp"
            android:textColor="@android:color/secondary_text_light"
            android:fontFamily="@font/alegreya_sans_medium"
            android:text="Shop By Category :" />

        <LinearLayout
            android:id="@+id/category"
            android:layout_marginTop="310sp"
            android:layout_width="match_parent"
            android:layout_height="200sp"
            android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="133sp"
                    android:layout_height="200sp"
                    android:layout_marginLeft="5sp"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:layout_width="133sp"
                        android:layout_height="97sp"
                        app:cardCornerRadius="15sp">

                    <ImageView
                        android:id="@+id/fruit_index"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/fruitsnormal" />

                    <TextView
                        android:background="@drawable/gridtext"
                        android:padding="4sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Fruits"
                        android:textSize="17sp"
                        android:layout_gravity="center"
                        android:fontFamily="@font/alegreya_sans_medium"
                        android:textColor="@android:color/background_dark"/>
                    </androidx.cardview.widget.CardView>


                    <androidx.cardview.widget.CardView
                        android:layout_width="133sp"
                        android:layout_height="97sp"
                        android:layout_marginTop="6sp"
                        app:cardCornerRadius="15sp">

                        <ImageView
                            android:id="@+id/vegetables_index"
                            android:layout_width="match_parent"
                            android:layout_height="97sp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/vegg" />

                        <TextView
                            android:background="@drawable/gridtext"
                            android:padding="4sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Vegetables"
                            android:textSize="16sp"
                            android:layout_gravity="center"
                            android:fontFamily="@font/alegreya_sans_medium"
                            android:textColor="@android:color/background_dark"/>
                    </androidx.cardview.widget.CardView>


                </LinearLayout>

            <LinearLayout
                android:layout_width="128sp"
                android:layout_height="200sp"
                android:layout_marginLeft="4sp"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="128sp"
                    android:layout_height="97sp"
                    app:cardCornerRadius="15sp">

                    <ImageView
                        android:id="@+id/exoticfruits_index"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/exfruits" />

                    <TextView
                        android:background="@drawable/gridtext"
                        android:padding="4sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Exotic Fruits"
                        android:textSize="16sp"
                        android:layout_gravity="center"
                        android:fontFamily="@font/alegreya_sans_medium"
                        android:textColor="@android:color/black"/>
                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:layout_width="128sp"
                    android:layout_height="97sp"
                    android:layout_marginTop="6sp"
                    app:cardCornerRadius="15sp">

                    <ImageView
                        android:id="@+id/exoticveg_index"
                        android:layout_width="match_parent"
                        android:layout_height="97sp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/exveg" />

                    <TextView
                        android:background="@drawable/gridtext"
                        android:padding="4sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Exotic Vegetables"
                        android:textSize="16sp"
                        android:layout_gravity="center"
                        android:fontFamily="@font/alegreya_sans_medium"
                        android:textColor="@android:color/background_dark"/>
                </androidx.cardview.widget.CardView>





            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="130sp"
                android:layout_height="match_parent"
                android:layout_marginLeft="5sp"
                app:cardCornerRadius="15sp">

                <ImageView
                    android:id="@+id/grain_index"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/grain2"
                    android:scaleType="centerCrop"/>

                <TextView
                    android:background="@drawable/gridtext"
                    android:layout_width="95sp"
                    android:layout_height="40sp"
                    android:layout_gravity="center"
                    android:fontFamily="@font/alegreya_sans_medium"
                    android:text="Whole grain and Pulses"
                    android:textAlignment="center"
                    android:textColor="@android:color/background_dark"
                    android:textSize="16sp" />


            </androidx.cardview.widget.CardView>
        </LinearLayout>
            <TextView
                android:layout_marginTop="530sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/alegreya_sans_medium"
                android:textSize="22sp"
                android:layout_marginLeft="15sp"
                android:text="Most Popular Items :"/>


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_index_exotic_fruits"
                android:scrollbars="horizontal"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:listitem="@layout/popularitem_layout"
                android:layout_marginTop="565sp"/>

    </RelativeLayout>

    </ScrollView>




    <com.google.android.material.navigation.NavigationView
        app:headerLayout="@layout/header_nav"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/nav_activity_index"
        app:itemTextColor="@color/textcolorPrimary"
        android:background="@android:color/white"
        app:menu="@menu/drawer_menu"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"/>


</androidx.drawerlayout.widget.DrawerLayout>




