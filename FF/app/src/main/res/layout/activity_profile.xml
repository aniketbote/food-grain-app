<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout_profile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:layout_width="match_parent"
        android:layout_height="55sp"
        layout="@layout/activity_toolbar"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200sp"
        android:background="@color/quantum_lightgreen100">


    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_marginBottom="15sp"
        android:id="@+id/userphoto_profile"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_width="90sp"
        android:layout_height="90sp"
        app:civ_border_width="3sp" />

        <TextView
            android:fontFamily="@font/alegreya_sans_medium"
            android:id="@+id/username1_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/userphoto_profile"
            android:textSize="18sp"
            android:layout_marginTop="5sp"
            android:text="User Name"/>


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5sp">

        <RelativeLayout
            android:layout_centerVertical="true"
            android:layout_width="300sp"
            android:layout_height="wrap_content">

        <TextView
            android:layout_marginLeft="10sp"
            android:fontFamily="@font/alegreya_sans_medium"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Profile Details:"
            android:layout_marginTop="5sp"/>

        <TextView
            android:layout_marginLeft="10sp"
            android:id="@+id/nameplaceholder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name: "
            android:textSize="16sp"
            android:fontFamily="@font/alegreya_sans_medium"
            android:layout_marginTop="30sp"/>
        <TextView
            android:id="@+id/username2_profile"
            android:layout_toRightOf="@id/nameplaceholder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="User Name "
            android:textSize="16sp"
            android:fontFamily="@font/alegreya_sans_medium"
            android:layout_marginTop="30sp"/>

        <TextView
            android:layout_marginLeft="10sp"
            android:id="@+id/phplaceholder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phone Number: "
            android:textSize="16sp"
            android:fontFamily="@font/alegreya_sans_medium"
            android:layout_marginTop="47sp"/>
        <TextView
            android:layout_toRightOf="@id/phplaceholder"
            android:id="@+id/phnumber_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1234567890 "
            android:textSize="16sp"
            android:fontFamily="@font/alegreya_sans_medium"
            android:layout_marginTop="47sp"/>
        <TextView
            android:layout_marginLeft="10sp"
            android:id="@+id/emailplaceholder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="E-mail: "
            android:textSize="16sp"
            android:fontFamily="@font/alegreya_sans_medium"
            android:layout_marginTop="65sp"/>
        <TextView
            android:layout_toRightOf="@id/emailplaceholder"
            android:id="@+id/email_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1234567890 "
            android:textSize="16sp"
            android:fontFamily="@font/alegreya_sans_medium"
            android:layout_marginTop="65sp"/>
            </RelativeLayout>

        <View
            android:layout_marginTop="95sp"
            android:layout_width="match_parent"
            android:layout_height="1sp"
            android:background="#c0c0c0"/>

        <ImageView
            android:id="@+id/profiledetails_btn"
            android:layout_marginRight="15sp"
            android:layout_width="30sp"
            android:layout_height="30sp"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_arrow_forward_black_24dp"
            android:layout_centerVertical="true"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5sp">

        <TextView
            android:layout_marginLeft="10sp"
            android:fontFamily="@font/alegreya_sans_medium"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Address:"
            android:layout_marginTop="15sp"/>

        <TextView
            android:id="@+id/address_profile"
            android:layout_marginLeft="10sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="101 , blah blah blah "
            android:textSize="16sp"
            android:fontFamily="@font/alegreya_sans_medium"
            android:layout_marginTop="45sp"/>



        <View
            android:layout_marginTop="95sp"
            android:layout_width="match_parent"
            android:layout_height="1sp"
            android:background="#c0c0c0"/>

        <ImageView
            android:id="@+id/profileaddress_btn"
            android:layout_marginRight="15sp"
            android:layout_width="30sp"
            android:layout_height="30sp"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_arrow_forward_black_24dp"
            android:layout_centerVertical="true"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5sp">


        <TextView
            android:layout_marginLeft="10sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Logout"
            android:layout_centerVertical="true"
            android:textSize="16sp"
            android:fontFamily="@font/alegreya_sans_medium" />



        <View
            android:layout_marginTop="95sp"
            android:layout_width="match_parent"
            android:layout_height="1sp"
            android:background="#c0c0c0"/>

        <ImageView
            android:id="@+id/profilelogout_btn"
            android:layout_marginRight="15sp"
            android:layout_width="30sp"
            android:layout_height="30sp"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_arrow_forward_black_24dp"
            android:layout_centerVertical="true"/>

    </RelativeLayout>




</LinearLayout>

